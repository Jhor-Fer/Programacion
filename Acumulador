#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;



void main()
{int x, h, i, N;
N=5;
do
    { cout<<"Ingrese un numero: ";
      cin>>x;
	  h=0;


	    for(i=1;i<N;i++)
	       {h=h+x;
		
	       }
	    
	 }while(x<i);
	   
     cout<<"El numero acumulativo es: "<<h;
     getch(); 
	
}
