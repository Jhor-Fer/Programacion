#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;

int main() {
	float a;
	float b;
	float c;
	float d;
	float e;
	float g;
	float h;
	cout << "Ingrese el primer numero:" << endl;
	cin >> a;
	cout << "Ingrese el segundo numero:" << endl;
	cin >> b;
	c = a+b;
	d = a-b;
	e = a*b;
	h = a/b;

	cout << "El resultado de la suma  es: " << c << endl;
	cout << "El resultado de la resta  es: " << d << endl;
	cout << "El resultado de la multiplicacion  es: " << e << endl;
	cout << "El resultado de la division  es: " << h << endl;
	getch();
	return 0;
}
