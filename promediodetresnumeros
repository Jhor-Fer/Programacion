#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;

void main()
{   float a,b,c,r;
    cout<<"escribir tres numero: ";
    cin>>a;
	cin>>b;
	cin>>c;
     if  (a>=0	&& a<=10)
        {if   (b>=0 && b<=10)
            {if   (c>=0 && c<=10)
                 {r=(a+b+c)/3;
	             cout<<"el promedio de los tres numeros es:"<<r;
                 }
	           else
	             {cout<<"el numero no esta en rango: ";
                 }
            }
          else
            {cout<<"el numero no esta en rango: ";
            }
       } 
      else
       {cout<<"el numero no esta en rango: ";
       }

getch();

}
